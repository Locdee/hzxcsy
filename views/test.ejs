                <%try{
                    for(let i = 0; i < navs.data.length; i++){
                        let clazz = i === 0 ? 'layui-this':'';
                %>
                <li class="layui-nav-item <%=clazz%>">
                    <a href="<%=navs.data[i].url.href%>" target="<%=navs.data[i].url.target%>"><%=navs.data[i].name%></a>
                    <%if(navs.data[i].children && navs.data[i].children.length > 0){
                        let subnavs = navs.data[i].children;
                    %>
                    <dl class="layui-nav-child"> <!-- 二级菜单 -->
                        <%for(let j = 0; j < subnavs.length; j++){%>
                        <dd><a href="<%=subnavs[j].url.href%>" target="<%=subnavs[j].url.target%>"><%=subnavs[j].name%></a></dd>
                        <%}%>
                    </dl>
                    <%}%>
                </li>
                <%}}catch(err){
                    console.error(err.message);
                 }%>
            </ul>
        </div>
    </div>

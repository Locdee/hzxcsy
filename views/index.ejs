<%- include header %>
    <!-- 轮播模块 -->
    <%- include template/carousel %>
    <!-- 轮播模块 end-->
        <div class="layui-container" style="margin-top:25px;    background-color: #fff;">
            <!-- 公司简介模块 -->
            <div class="layui-row xc-section">
                <h1 class="site-big-title layui-word-aux"><span>公司简介 / About Us</span></h1>
                <div class="layui-col-md8">
                    <div style="width:20%;display:inline-block;vertical-align:top;float:left;text-align: right;"><img src="<%=STATIC_HOST%>/public/upload/commen/logo.jpg" style="max-width:90%;width:auto"/></div>
                    <div style="width:80%;display:inline-block">
                        <div class="" style="padding:0 40px 0">
                            <div class="site-text">
                                <p class="text-indent-2em" style="line-height:36px">杭州协创实业有限公司是一家以汽车备件仓储管理，物流配送服务，汽车备件信息技术服务为主营业务，辅以整车销售的集团控股公司。 其实际管理和控股多家公司给全国各大主机厂提供专业的区域售后备件仓储与物流配送服务。</p>
                            </div>
                            <div class="txtcenter" style="margin-top:0px;"><a href="/aboutxc" class="layui-btn xc-btn-red">详情</a></div>
                        </div>
                    </div>
                </div>
                <div class="layui-col-md4">
                    <img src="<%=STATIC_HOST%>/public/upload/commen/no1.png" width="100%"/>
                </div>
            </div>
            <!-- 公司简介模块 end-->
            <!-- 业务模块 -->
            <div class="xc-section">
                <%- include template/buss_index %>
            </div>
            <!-- 业务模块 end-->
            <!-- 资讯模块 -->
            <div class="xc-section ">
                <%- include template/news_index %>
            </div>
            <!-- 资讯模块 end-->
            <!-- 合作伙伴模块 -->
            <div class="xc-section">
                    <% try{%>
                    <h1 class="site-big-title layui-word-aux"><span><%=cooperator.title %></span></h1>
                    <div id="xc-swiper-cooperator" class="swiper-container xc-swiper-container">
                        <div class="swiper-wrapper" style="transition-timing-function:linear;-moz-transition-timing-function:linear;
                        -webkit-transition-timing-function:linear;-o-transition-timing-function:linear;">
                        <%
                        let data = cooperator.data;
                        for(let i = 0; i < data.length; i++){%>    
                        <div class="swiper-slide">
                            <div class="xc-firends-box">
                                <img class="" alt="<%= data[i].name %>" style="" src="<%=STATIC_HOST + data[i].img_src %>" data-holder-rendered="true">
                                <a class="xc-pos-abs txtcenter xc-firends-text" href="<%= data[i].url %>" target="_blank"><%= data[i].name %></a>
                            </div> 
                        </div>
                        <%}%>
                        </div>
                        <!-- 如果需要导航按钮 -->
                        <!-- <div class="swiper-button-prev"></div> -->
                        <!-- <div class="swiper-button-next"></div> -->
                    </div>
                    <% }catch(err){
                        console.error(err.message);
                     }%>
                    
                </div>
                <!-- 合作伙伴模块 end-->
            <!-- 商城模块 -->
            <div class="xc-section">
                <%try{%>
                <h1 class="site-big-title layui-word-aux"><span><%=shopList.title%></span>
                    <a class="xc-link-more" href="http://carsociety.cn/">更多</a>
                </h1>
                <div id="xc-swiper-shopping" class="swiper-container xc-swiper-container" style="height:250px">
                    <div class="swiper-wrapper" style="transition-timing-function:linear;-moz-transition-timing-function:linear;
                    -webkit-transition-timing-function:linear;-o-transition-timing-function:linear;">
                    <%
                    let data = shopList.data;
                    for(let i = 0; i < data.length; i++){%>    
                    <div class="swiper-slide">
                        <a href="<%=data[i].url.href%>" target="<%=data[i].url.target%>"><img src="<%=STATIC_HOST + data[i].src%>" width="100%" height="250px"/></a>
                    </div>
                    <%}%>
                    </div>
                    <!-- 如果需要导航按钮 -->
                    <!-- <div class="swiper-button-prev"></div> -->
                    <!-- <div class="swiper-button-next"></div> -->
                </div>
                    <% }catch(err){
                        console.error(err.message);
                     }%>
            </div>
            <!-- 商城模块 end-->
        </div>

        <%- include footer %>
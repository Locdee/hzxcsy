<%- include header %>
    <!-- 轮播模块 -->
    <%- include template/carousel %>
    <!-- 轮播模块 end-->
        <div class="layui-container">
            <!-- 公司简介模块 -->
            <div class="layui-row xc-section">
                <h1 class="site-big-title layui-word-aux"><span>公司简介 / About Us</span></h1>
                <div class="layui-col-md6">
                    <div class="xc-img-box" style="background-image: url(<%=STATIC_HOST%>/public/upload/commen/no1.png);
                height: 275px;position: static;"></div>
                </div>
                <div class="layui-col-md6">
                    <div class="xc-panel">
                        <div class="site-text">
                            <p class="text-indent-2em">杭州协创实业有限公司是一家以汽车备件仓储管理，物流配送服务，汽车备件信息技术服务为主营业务，辅以整车销售的集团控股公司。 其实际管理和控股多家公司给全国各大主机厂提供专业的区域售后备件仓储与物流配送服务。</p>
                            <p class="text-indent-2em">公司以“诚信、专业、服务、创新”为经营理念。倾力打造个性化服务品牌，为汽车厂家提供全方位、专业化的售后备件服务。</p>
                        </div>
                        <div class="txtcenter" style="margin-top:15px;"><a href="/aboutxc" class="layui-btn xc-btn-red">详情</a></div>
                    </div>
                </div>
            </div>
            <!-- 公司简介模块 end-->
            <!-- 业务模块 -->
            <div class="xc-section">
                <%- include template/buss_index %>
            </div>
            <!-- 业务模块 end-->
            <!-- 资讯模块 -->
            <div class="xc-section ">
                <%- include template/news_index %>
            </div>
            <!-- 资讯模块 end-->
            <!-- 合作伙伴模块 -->
            <div class="xc-section">
                    <% try{%>
                    <h1 class="site-big-title layui-word-aux"><span><%=cooperator.title %></span></h1>
                    <%
                        let data = cooperator.data;
                        let len = data.length <= 6 ? data.length :(data.length%6 == 0 ? data.length : parseInt(data.length/6)*6);
                        for(let i = 0; i < len; i++){%>
                            <div class="layui-col-xs6 layui-col-sm4 layui-col-md2 xc-firends-box">
                                <img class="" alt="<%= data[i].name %>" style="width: 100%; height: 100%" src="<%=STATIC_HOST + data[i].img_src %>" data-holder-rendered="true">
                                <a class="xc-pos-abs txtcenter xc-firends-text" href="<%= data[i].url %>" target="_blank"><%= data[i].name %></a>
                            </div> 
                    <% }}catch(err){
                        console.error(err.message);
                     }%>
                </div>
                <!-- 合作伙伴模块 end-->
            <!-- 商城模块 -->
            <div class="xc-section">
                <%try{%>
                <h1 class="site-big-title layui-word-aux"><span><%=shopList.title%></span>
                    <a class="" href="http://carsociety.cn/" style="font-size: 14px;float: right;color: rgb(247, 9, 9);">更多</a>
                </h1>
                <div id="xc-swiper-shopping" class="swiper-container" style="height:250px">
                        <div class="swiper-wrapper" style="transition-timing-function:linear;-moz-transition-timing-function:linear;
                        -webkit-transition-timing-function:linear;-o-transition-timing-function:linear;">
                        <%
                        let data = shopList.data;
                        for(let i = 0; i < data.length; i++){%>    
                        <div class="swiper-slide" style="background-color:rgba(150, 11, 231, 0)">
                            <a href="<%=data[i].url.href%>" target="<%=data[i].url.target%>"><img src="<%=data[i].src%>" width="100%" height="250px"/></a>
                        </div>
                        <%}%>
                        </div>
                        <!-- 如果需要导航按钮 -->
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>
                    </div>
                    <% }catch(err){
                        console.error(err.message);
                     }%>
            </div>
            <!-- 商城模块 end-->
        </div>

        <%- include footer %>